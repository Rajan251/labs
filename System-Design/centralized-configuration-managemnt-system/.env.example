# Application
APP_NAME=config-management-service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database
DATABASE_URL=postgresql+asyncpg://config_user:config_pass@localhost:5432/config_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300
REDIS_MAX_CONNECTIONS=50

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=config_changes
RABBITMQ_QUEUE=config_notifications

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true
ENABLE_NOTIFICATIONS=true

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Client SDK
CLIENT_CACHE_TTL=60
CLIENT_RETRY_MAX_ATTEMPTS=3
CLIENT_RETRY_BACKOFF_FACTOR=2
