# Application
APP_NAME=webhook-platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://webhook_user:webhook_pass@postgres:5432/webhook_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# RabbitMQ
RABBITMQ_URL=amqp://webhook_user:webhook_pass@rabbitmq:5672/
CELERY_BROKER_URL=amqp://webhook_user:webhook_pass@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Rate Limiting
RATE_LIMIT_PER_TENANT=100  # requests per minute
RATE_LIMIT_WINDOW=60  # seconds

# Webhook Delivery
MAX_RETRY_ATTEMPTS=6
INITIAL_RETRY_DELAY=1  # seconds
MAX_RETRY_DELAY=32  # seconds
WEBHOOK_TIMEOUT=30  # seconds

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
