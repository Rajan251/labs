# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CRITICAL_CHANNEL=#alerts-critical
SLACK_WARNINGS_CHANNEL=#alerts-warnings
SLACK_INCIDENTS_CHANNEL=#incidents

# PagerDuty Configuration
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=incidents
POSTGRES_USER=incident_user
POSTGRES_PASSWORD=incident_pass_change_me
DATABASE_URL=postgresql://incident_user:incident_pass_change_me@postgres:5432/incidents

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Incident API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-me
API_DEBUG=false
API_CORS_ORIGINS=http://localhost:3000,http://localhost:9090

# Prometheus Configuration
PROMETHEUS_URL=http://prometheus:9090

# Grafana Configuration
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Alertmanager Configuration
ALERTMANAGER_URL=http://alertmanager:9093

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alertmanager@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=alertmanager@example.com
SMTP_TO=sre-team@example.com

# Jira Configuration (optional)
JIRA_URL=https://your-company.atlassian.net
JIRA_USER=your-jira-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=INC

# GitHub Configuration (optional)
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-org/your-repo

# AWS Secrets Manager (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9091
